<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<include file="biblio.xml" />
	<include file="perso.xml" />
	<package name="application" namespace="/vue" extends="struts-default">
		
		<action name="accueil">
			<result>/vue/index.jsp</result>
		</action>
		
		<action name="afficheMsg" class="beanAction.AfficheMessageAction">
			<result>/vue/afficheMessage.jsp</result>
		</action>

		<action name="getAuteur" class="beanAction.RecupAuteur">
			<result>/vue/biblio/formAuteur.jsp</result>
		</action>
		
		<action name="RecupAuteur" class="beanAction.RecupAuteur">
			<result>/vue/biblio/formAuteur.jsp</result>
		</action>
		
		<action name="CreerAuteur" class="beanAction.CreationAuteurAction">
			<result>/vue/biblio/formAuteur.jsp</result>
		</action>
		
		<action name="SupprAuteur" class="beanAction.SupprAuteurAction">
			<result>/vue/biblio/formAuteur.jsp</result>
		</action>
		
		<action name="ModifAuteur" class="beanAction.ModifAuteurAction">
			<result>/vue/biblio/formAuteur.jsp</result>
		</action>
		
		<action name="TODO">
			<result>/vue/todo.jsp</result>
		</action>
		
		<action name="accueilBiblio">
			<result type="redirectAction">
				<param name="actionName">Biblio</param>
				<param name="namespace">/biblio</param>
			</result>
		</action>
		
		<action name="accueilPerso">
			<result type="redirectAction">
				<param name="actionName">Perso</param>
				<param name="namespace">/perso</param>
			</result>
		</action>

	</package>
</struts>